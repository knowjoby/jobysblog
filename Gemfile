source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "minima", "~> 2.5"

# Pin ffi to a version compatible with Ruby 2.6 (system Ruby on macOS)
gem "ffi", "~> 1.15.5"
# Use sassc instead of sass-embedded (sass-embedded requires ffi >= 1.17)
gem "jekyll-sass-converter", "~> 2.2"
gem "sassc", "~> 2.4"

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
end
